@model LoginModel
@{
	ViewData["Title"] = "Login";
	Layout = "";
}

@* This Message is printed out if the user unsuccessfully login
	@Author: Anthony Wong
	@Version: 1.0
	@Date: October 28, 2018
*@
@if (!Model.FirstLogin)
{
	<p>Invalid Email or Password try again.</p>
}

@*
	This is a post method that uses the Function Index in the Controller called HomeController and send the result
	Back into the Model LoginModel.
	@Author: Anthony Wong
	@Version: 1.0
	@Date: October 28, 2018
*@
<form method="post" asp-action="Index" asp-controller="Home">
	<div style="position:absolute; top:400px; left:200px;">
	<label asp-for="Email"></label>
	<label asp-for="AdminEmail" style="position:absolute; left:800px;"></label>
	<input asp-for="Email"/>
	<input asp-for="AdminEmail" style="position:absolute; left:885px;"/>
		<br />


	<label asp-for="Password"></label>
		<label asp-for="AdminPassword" style="position:absolute; left:800px;"></label>
	<input asp-for="Password" />
	<input asp-for="AdminPassword" style="position:absolute; left:900px;" />
		<br />


	<input type="submit" value="log in" name="Contractorlogin"/>

		</div>
	</form>


